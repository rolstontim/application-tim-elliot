#code for stat screen


<StatScreen>:

#implement wrap funtion - wraps text into size that will fit on screen and
#adjusts the pos of image and label


#combine cols passed into scroll.py to create one large widget that will react with itself
# OR || find a way to make dynamic text wrapping react to the labels/images around itself

    ScrollView:

        pos_hint: {"top": 1, "left": 1}
        size_hint: 1, 1
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
        #colour and background
            canvas:
                Color:
                    id: background_colour
                    rgb: utils.get_color_from_hex("#39B3B4")
                Rectangle:
                    source: './backgrounds/gradient2_stats.png'
                    size: self.size
                    pos: self.pos
            id: stat_list
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            #size of each row in stat screen
            row_default_height: "80dp"
            row_force_default: True
