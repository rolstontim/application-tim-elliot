WindowManager:
    Window1:

    Window2:


<Window1>:
    name: "Window1"

    Button:
        text: 'go to window 2'
        on_release: app.root.current = 'Window2'




<Window2>:
    name: "Window2"


    BoxLayout:

        Button:
            text: "go back"
            on_release: app.root.current = 'Window1'

        ScrollView:

            do_scroll_x: False
            do_scroll_y: True

            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text:
                    'really some amazing text\n' * 100
